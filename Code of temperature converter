<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Temperature Converter</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      margin: 50px;
    }

    h1 {
      margin-bottom: 20px;
    }

    .converter {
      display: inline-block;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      background-color: #f9f9f9;
    }

    .result {
      margin-top: 20px;
    }

    input[type="number"] {
      width: 100px;
      padding: 5px;
    }

    input[type="submit"] {
      padding: 5px 10px;
      background-color: #007BFF;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>Temperature Converter</h1>
  <div class="converter">
    <h3>Celsius to Fahrenheit</h3>
    <form id="celsiusToFahrenheit">
      <label for="celsius">Celsius:</label>
      <input type="number" id="celsius" step="any" required>
      <input type="submit" value="Convert">
    </form>
    <div class="result" id="celsiusToFahrenheitResult"></div>
  </div>

  <div class="converter">
    <h3>Fahrenheit to Celsius</h3>
    <form id="fahrenheitToCelsius">
      <label for="fahrenheit">Fahrenheit:</label>
      <input type="number" id="fahrenheit" step="any" required>
      <input type="submit" value="Convert">
    </form>
    <div class="result" id="fahrenheitToCelsiusResult"></div>
  </div>

  <script>
    // Function to convert Celsius to Fahrenheit
    function celsiusToFahrenheit(celsius) {
      return (celsius * 9/5) + 32;
    }

    // Function to convert Fahrenheit to Celsius
    function fahrenheitToCelsius(fahrenheit) {
      return (fahrenheit - 32) * 5/9;
    }

    // Celsius to Fahrenheit form submission
    document.getElementById('celsiusToFahrenheit').onsubmit = function(event) {
      event.preventDefault();
      const celsius = parseFloat(document.getElementById('celsius').value);
      const fahrenheit = celsiusToFahrenheit(celsius);
      document.getElementById('celsiusToFahrenheitResult').innerHTML = `${celsius}째C is equal to ${fahrenheit.toFixed(2)}째F`;
    };

    // Fahrenheit to Celsius form submission
    document.getElementById('fahrenheitToCelsius').onsubmit = function(event) {
      event.preventDefault();
      const fahrenheit = parseFloat(document.getElementById('fahrenheit').value);
      const celsius = fahrenheitToCelsius(fahrenheit);
      document.getElementById('fahrenheitToCelsiusResult').innerHTML = `${fahrenheit}째F is equal to ${celsius.toFixed(2)}째C`;
    };
  </script>
</body>
</html>
